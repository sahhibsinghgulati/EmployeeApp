@model EmployeeApp.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Dark Mode Styles for Login/Register */
        body.dark-mode {
            background-color: #121212 !important;
            color: #e0e0e0;
        }

            body.dark-mode .card {
                background-color: #1e1e1e;
                border-color: #333;
                color: #e0e0e0;
            }

            body.dark-mode .form-control {
                background-color: #2d2d2d;
                border-color: #444;
                color: #fff;
            }

                body.dark-mode .form-control:focus {
                    background-color: #333;
                    border-color: #666;
                }

            body.dark-mode .text-muted {
                color: #a0a0a0 !important;
            }

            body.dark-mode .bg-white {
                background-color: #2d2d2d !important;
                border-color: #444 !important;
            }

        /* Position the toggle button in top-right corner */
        .theme-toggle {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
            background: none;
            border: 1px solid #ccc;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 14px;
            transition: all 0.3s;
        }

        body.dark-mode .theme-toggle {
            border-color: #555;
            color: #fff;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <button id="themeToggleBtn" class="theme-toggle">🌙 Dark Mode</button>
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 shadow" style="width: 400px;">
            <h3 class="text-center mb-4">Welcome!</h3>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
            <div class="mb-3">
                <label>Username</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label>Password</label>
                <div class="position-relative">
                    @Html.PasswordFor(m => m.Password, new
                    {
                        @class = "form-control",
                        placeholder = "Enter Password",
                        id = "Password",
                        style = "padding-right: 40px;"
                    })

                    <span id="caps-indicator" title="Caps Lock is ON"
                          style="display:none; position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #131ef7;">

                        <i class="bi bi-capslock-fill" style="font-size: 22px;"></i>

                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3 p-3 bg-white border rounded">
                <label class="fw-bold mb-2">Security Check:</label>
                <div class="d-flex align-items-center justify-content-between">

                    <div style="cursor: pointer;" onclick="reloadCaptcha()" title="Click to refresh image">
                        <img id="captchaImg" src="@Url.Action("CaptchaImage", "Account")" alt="Captcha" style="border: 1px solid #ccc;" />
                    </div>
                    <input type="number" name="captchaInput" class="form-control w-50 ms-3" placeholder="Sum" required />
                </div>
                <small class="text-muted" style="font-size: 12px;">Click image to change question</small>
            </div>

                                if (ViewBag.Message!= null)
                                {
            <div class="alert alert-danger">@ViewBag.Message</div>
                                }

            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="text-center mt-3">
                <p>Don't have an account?</p>
                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-secondary w-100">Create New Account</a>
            </div>
                            }
        </div>
    </div>

</body>
</html>

<script>
    function reloadCaptcha() {
        var img = document.getElementById('captchaImg');
        // We add a random timestamp to force the browser to re-download the image
        img.src = '@Url.Action("CaptchaImage", "Account")' + '?t=' + new Date().getTime();
    }
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("themeToggleBtn");
        const body = document.body;

        // 1. Check saved theme on load
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            toggleBtn.innerHTML = "☀️ Light Mode";
            // Remove Bootstrap's bg-light if dark mode is active to prevent conflicts
            body.classList.remove("bg-light");
        }

        // 2. Handle Click
        toggleBtn.addEventListener("click", function () {
            body.classList.toggle("dark-mode");

            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                toggleBtn.innerHTML = "☀️ Light Mode";
                body.classList.remove("bg-light");
            } else {
                localStorage.setItem("theme", "light");
                toggleBtn.innerHTML = "🌙 Dark Mode";
                body.classList.add("bg-light");
            }

        });
        const passwordInput = document.getElementById("Password");
        const capsIndicator = document.getElementById("caps-indicator");

        function checkCaps(event) {
            // Check modifier state
            if (event.getModifierState("CapsLock")) {
                capsIndicator.style.display = "block";
            } else {
                capsIndicator.style.display = "none";
            }
        }

        passwordInput.addEventListener("keyup", checkCaps);
        passwordInput.addEventListener("mousedown", checkCaps);
        passwordInput.addEventListener("focus", checkCaps);
        passwordInput.addEventListener("blur", function () {
            capsIndicator.style.display = "none";
        });
    });
</script>