@model EmployeeApp.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Dark Mode Styles for Login/Register */
        body.dark-mode {
            background-color: #121212 !important;
            color: #e0e0e0;
        }

            body.dark-mode .card {
                background-color: #1e1e1e;
                border-color: #333;
                color: #e0e0e0;
            }

            body.dark-mode .form-control {
                background-color: #2d2d2d;
                border-color: #444;
                color: #fff;
            }

                body.dark-mode .form-control:focus {
                    background-color: #333;
                    border-color: #666;
                }

            body.dark-mode .text-muted {
                color: #a0a0a0 !important;
            }

            body.dark-mode .bg-white {
                background-color: #2d2d2d !important;
                border-color: #444 !important;
            }

        /* Position the toggle button in top-right corner */
        .theme-toggle {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
            background: none;
            border: 1px solid #ccc;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 14px;
            transition: all 0.3s;
        }

        body.dark-mode .theme-toggle {
            border-color: #555;
            color: #fff;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <button id="themeToggleBtn" class="theme-toggle">🌙 Dark Mode</button>
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 shadow" style="width: 400px;">
            <h3 class="text-center mb-4">Create Account</h3>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
            <div class="mb-3">
                <label>Username</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Choose a Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label>Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Choose a Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

                            if (ViewBag.Message!= null)
                            {
            <div class="alert alert-danger">@ViewBag.Message</div>
                            }

            <button type="submit" class="btn btn-success w-100 mb-2">Sign Up</button>

            <div class="text-center">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Already have an account? Login</a>
            </div>
                        }
        </div>
    </div>

</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleBtn = document.getElementById("themeToggleBtn");
        const body = document.body;

        // 1. Check saved theme on load
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            toggleBtn.innerHTML = "☀️ Light Mode";
            // Remove Bootstrap's bg-light if dark mode is active to prevent conflicts
            body.classList.remove("bg-light");
        }

        // 2. Handle Click
        toggleBtn.addEventListener("click", function() {
            body.classList.toggle("dark-mode");

            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                toggleBtn.innerHTML = "☀️ Light Mode";
                body.classList.remove("bg-light");
            } else {
                localStorage.setItem("theme", "light");
                toggleBtn.innerHTML = "🌙 Dark Mode";
                body.classList.add("bg-light");
            }
        });
    });
</script>